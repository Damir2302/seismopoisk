mixin hero(title, subtitle, media, link, button, anchor)

    if page == 'Main'
        canvas#canvas.canvas

    a.arrow-btn(href="#content")
        span.arrow-btn-text SCROLL DOWN
        +sprite('arr','','arrow-btn-element')
        +sprite('arrow-down','','arrow-btn-arrow')

    if breads.length == true

        include _breadcrumbs
        +breadcrumbs(...breads)

    .hero__wrapper

        .hero__content

            .container

                .hero__logo
                    img(src="assets/images/logo-text.png", alt="logo")
                .hero__text
                    h1= title
                    p.text-medium=subtitle

                if page != "Main" && page != "About"
                    .hero__button
                        a.hero__button-link(href=anchor)=button

        if media == 'video'
            .hero__image
                video(src="assets/images/" + link oncontextmenu="return false;" muted loop autoplay)

        else
            .hero__image
                img(src="assets/images/" + link, alt="img")